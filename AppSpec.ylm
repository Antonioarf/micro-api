version: 0.0
os: linux

resources:
  - name: MyDockerContainer
    type: DockerContainer
    properties:
      image: <DOCKER_IMAGE_NAME>  # Replace with the name of your Docker image
      containerPort: <CONTAINER_PORT>  # Replace with the port your application listens on

phases:
  pre_build:
    commands:
      - curl -sL https://deb.nodesource.com/setup_14.x | sudo -E bash -
      - sudo apt install -y nodejs 
      - npm install
      - npm run unit-test
      - npm start

